<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat-In</title>
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="fixed-top mb-5">
        <nav class="navbar navbar-dark bg-dark">
            <span class="navbar-brand mb-0 h1">Chat-In</span>
            <span class="navbar-text">
                A Product By <a href='https://www.upgrate.in'>Upgrate.in</a>
            </span>
        </nav>
    <button class="btn btn-small btn-primary d-sm-none" onclick="handleUserPanel()">Users / Invite</button>
    </header>
    <section class="h-100 mt-5">
        <div class="row h-100 m-0">
            <div class="col-12 col-sm-3 d-none d-sm-block m-0" id="userPanel">
                <div class="usersPanel">
                </div>
            </div>
            <!-- chat panel -->
            <div class="col-12 col-sm-9 m-0" id='chatPanel'>
                <div data-spy="scroll" data-offset="0" id="chatMessages" class="px-4 py-5 bg-white h-100">
                </div>
                <!-- input field -->
                <form action="/" id='chat-message'>
                    <div class="input-group fixed-bottom">
                        <input type="text" name="messages" class="form-control" placeholder="Type Message--" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button type='submit' class="input-group-text bg-primary text-white" id="basic-addon2">send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.9.2/qs.min.js"
      integrity="sha256-TDxXjkAUay70ae/QJBEpGKkpVslXaHHayklIVglFRT4="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socket.js"></script>
</body>
</html>